{
  "version": 2,
  "builds": [
    {
      "src": "server.js",  // Replace with your actual server file name
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)", // Route for Socket.IO connections
      "dest": "/socket.io/$1"
    },
    {
      "src": "/(.*)",           // Catch-all route for other requests
      "dest": "/"
    }
  ]
}
